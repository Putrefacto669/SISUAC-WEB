@model IEnumerable<CapaPresentación.Carreras>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<div class="row m-4">
    <div class="col-sm-12">
        <div class="card">

            <div class="card-header container-fluid ">
                <div class="row">
                    <div class="col-md-10">
                        <h2>LISTADO DE LAS CARRERAS</h2>
                    </div>
                    <div class="col-md-2 float-right">
                        @Html.ActionLink("Agregar Nuevo", "Create", "", new { @class = "btn btn-success" })

                    </div>
                    <p class="Salto"></p>
                </div>
                <p class="Salto"></p>
                @*Bloque de código asignación busqueda creado 209072024 *@
              <div class="cols-md-10 ">

                @using (Html.BeginForm("Index", "Carreras"))
                {
                    <b>Buscar por:</b>
                    @Html.RadioButton("SearChBy", "Nombre", true) <text>Nombre</text>
                    @*@Html.RadioButton("SearChBy", "Facultad", true) <text>Facultad</text>*@
                    @Html.TextBox("search", "", htmlAttributes: new { @class = "w-50 form-control" })<br>
                    <input type="submit" value="Buscar" class="btn btn-outline-primary" />
                    @*Creación del boton Imprimir*@
                    @Html.ActionLink("Detalle", "Reporte", "", new { @class = "btn btn-primary" })
                }
              </div>
            </div>


            <div class="card-body">
                <table class="table table-striped table-borded table-hover">
                    <tr>
                        <th class="">
                            @Html.DisplayNameFor(model => model.Codigo)
                        </th>
                        @*<th>Código</th>*@

                        <th>Nombre</th>
                        <th>Facultad</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duracion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulo)
                        </th>
                        <th>Tipo Plan</th>
                        <th>Acciones</th>
                        <th></th>
                    </tr>

                    @*Validando información a buscar*@
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4">Datos no Encontrados</td>
                        </tr>
                     }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Facultad.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duracion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Titulo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoPlanEstudio.Nombre)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdCarrera }, new { @class = "btn btn-warning" })
                                    @*<p class="Salto"></p>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.IdCarrera }, new {@class="btn btn-danger"})*@
                                </td>
                            </tr>
                        }

                    }



                </table>

            </div>
        </div>
    </div>
</div>
<script src="js/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>










