@model IEnumerable<CapaPresentación.Clase_Secundaria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div class="row m-4">
  <div class="col-sm-12">
      <div class="card">
          <div class="card-header container-fluid ">
              <div class="row">
                  <div class="col-md-10">
                      <h2>LISTA DE CLASE SECUNDARIA</h2>
                  </div>
                  <div class="col-md-2 float-right">
                      @Html.ActionLink("Agregar Nuevo", "Create", "", new { @class = "btn btn-success" })

                  </div>
                  <p class="Salto"></p>
              </div>
              <p class="Salto"></p>
              @*Bloque de código asignación busqueda creado 209072024 *@
              <div class="cols-md-10 ">

                  @using (Html.BeginForm("Index", "Clase_Secundaria"))
                  {
                      <b>Buscar por:</b>
                      @Html.RadioButton("SearChBy", "Nombre", true) <text>Nombre</text> <br>
                      @Html.TextBox("search", "", htmlAttributes: new { @class = "w-50 form-control" })<br>
                      <input type="submit" value="Buscar" class="btn btn-outline-primary" />
                      @*Creación del boton Imprimir*@
                      @Html.ActionLink("Detalle", "Reporte", "", new { @class = "btn btn-primary" })
                  }
              </div>
          </div>

          <div class="card-body">
              <table id="estadocivil" class="table table-striped table-borded table-hover" border="1" style="width:100%">
                  <tr>
                      <th>
                          @Html.DisplayNameFor(model => model.Nombre)
                      </th>
                      <th>
                          @Html.DisplayNameFor(model => model.Descripcion)
                      </th>
                      <th></th>
                  </tr>


                  @*validamos información a buscar*@
                  @if (Model.Count() == 0)
                  {
                      <tr>
                          <td colspan="4">Datos no Encontrados</td>
                      </tr>
                  }
                  else
                  {
                      foreach (var item in Model)
                      {
                          <tr>
                              <td>
                                  @Html.DisplayFor(modelItem => item.Nombre)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => item.Descripcion)
                              </td>
                              <td>
                                  @Html.ActionLink("Editar", "Edit", new { id = item.IdClase }, new {@class="btn btn-warning"}) 
                                  @*@Html.ActionLink("Details", "Details", new { id = item.IdClase }) |*@
                                  @*@Html.ActionLink("Eliminar", "Delete", new { id = item.IdClase }, new {@class="btn btn-danger"})*@
                              </td>
                          </tr>
                      }

                  }
             </table>
          </div>
     </div>
  </div>
</div>




















