@model IEnumerable<CapaPresentación.Ciudades>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row m-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header container-fluid ">
                <div class="row">
                    <div class="col-md-10">
                        <h2>LISTADO DE LAS CIUDADES</h2>
                    </div>
                    <div class="col-md-2 float-right">
                        @Html.ActionLink("Agregar Nuevo", "Create", "", new { @class = "btn btn-success btn-block" })

                    </div>
                    <p class="Salto"></p>
                </div>
                <p class="Salto"></p>
                @*Bloque de código asignación busqueda creado 209072024 *@
                <div class="cols-md-10 ">

                    @using (Html.BeginForm("Index", "Ciudades"))
                    {
                        <b>Buscar por:</b>
                        @Html.RadioButton("SearChBy", "Nombre", true) <text>Nombre</text> <br>
                        @Html.TextBox("search", "", htmlAttributes: new { @class = "w-50 form-control" })<br>
                        <input type="submit" value="Buscar" class="btn btn-outline-primary" />
                        @*Creación del boton Imprimir*@
                        @Html.ActionLink("Detalle", "Reporte", "", new { @class = "btn btn-primary" })
                    }
                </div>
            </div>

            <div class="card-body" style="text-align:center" >
                <table id="ciudades" class="table table-striped table-borded table-hover" border="1" style="width:100%">
                    <tr>
                        @*<th class="text-center">
                            @Html.DisplayNameFor(model => model.IdPais)
                        </th>*@
                        @*<th>Código País</th>*@
                        @*<th class="text-center">
                            @Html.DisplayNameFor(model => model.Paises.Nombre)
                        </th>*@
                        <th>Pais</th>
                        @*<th class="text-center">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>*@
                        <th>Ciudad</th>
                        <th>Acciones</th>
                        <th></th>


                    </tr>
                    @*Convalidamos información a buscar*@

                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4">Datos no Encontrados</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Paises.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                @*<td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>*@
                                
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdCiudad }, new {@class="btn btn-warning"})
                                    @*@Html.ActionLink("Details", "Details", new { id = item.IdCiudad }) |*@
                                    @*@Html.ActionLink("Elimnar", "Delete", new { id = item.IdCiudad }, new {@class="btn btn-danger"})*@
                                </td>
                            </tr>
                        }

                    }

                </table>
            </div>
        </div>
    </div>
</div>
@*<script src="js/bootstrap.min.js"></script>*@














